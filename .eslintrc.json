{
  "extends": "next/core-web-vitals",
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "@next/eslint-plugin-next",
    "react-hooks"
  ],
  "rules": {
    "semi": ["error", "never"],
    "quotes": [2, "single"],
    "indent": [2],
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  }
}
